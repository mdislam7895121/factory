# Production Environment Variables for API
# Copy this file to .env.production and update with production values

# Database Connection
# This should point to your production PostgreSQL database
DATABASE_URL="postgresql://USER:PASS@prod-db-host:5432/factory_db?schema=public"

# API Configuration
PORT=4000
HOST=0.0.0.0

# Node Environment (always production in this context)
NODE_ENV=production

# Optional: Add other production-specific environment variables here
# - JWT_SECRET
# - LOG_LEVEL
# - RATE_LIMIT_*
# - SENTRY_DSN
# - SENTRY_TRACES_SAMPLE_RATE
# etc.

# Optional: Error monitoring (safe if empty)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0

# Emergency kill switch (0=off, 1=on)
FACTORY_KILL_SWITCH=0
